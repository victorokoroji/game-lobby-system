# ===========================================
# GAME LOBBY SYSTEM - ENVIRONMENT VARIABLES TEMPLATE
# ===========================================
# Copy this file to .env and fill in your values
# For production deployment, make sure to change all default passwords and secrets

# ===========================================
# DATABASE CONFIGURATION (MongoDB)
# ===========================================
MONGODB_PORT=27017
MONGODB_DATABASE=game-lobby
MONGODB_URI=mongodb://mongodb:27017/game-lobby
# ===========================================
# BACKEND CONFIGURATION
# ===========================================
# Server Configuration
NODE_ENV=production
BACKEND_PORT=5000
BACKEND_INTERNAL_PORT=5000

# Security - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Server Configuration
FRONTEND_PORT=3000
FRONTEND_INTERNAL_PORT=3000

# API Endpoints
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# ===========================================
# DEVELOPMENT OVERRIDES
# ===========================================
# For local development, you might want to use:
# NODE_ENV=development
# CORS_ORIGIN=http://localhost:5173
# MONGODB_URI=mongodb://localhost:27017/game-lobby
